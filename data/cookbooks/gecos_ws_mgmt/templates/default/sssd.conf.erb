[sssd]
config_file_version = 2
domains = <%= @domain[0].domain_name %>
services = nss, pam, pac
debug_level = 0

[nss]

[pam]

<% @domain.each do |d| %>
[domain/<%= d.domain_name %>]
# La enumeracion no esta recomendada en entornos con muchos usuarios
enumerate = false

id_provider = ad
auth_provider = ad
chpass_provider = ad
access_provider = ad

override_homedir = /home/%u

<% end %>
